{% extends 'AppBundle:Main:base.html.twig' %}

{% block javascripts %}
    <script type="text/javascript" async src="{{ asset('js/lib.js?%s') | format(random(998)) }}"></script>
{% endblock %}

{% block body %}

    <div class="all">

        {% include('AppBundle:Templates:header.html.twig') %}

        <div class="main">

            <div class="left">

                {% if recipe is defined %}

                    <div class="recipe">
                        <h1>{{ recipe.title }}</h1>

                        {% if recipe.brochure %}
                            <div class="picture_wrp">
                                <img src="/uploads/{{ recipe.brochure }}">
                            </div>
                        {% endif %}

                        <p class="full_description">{{ recipe.description }}</p>

                        <div class="recipe_more_links">
                            <a href="/edit/{{ recipe.id }}">Редактировать рецепт</a>
                        </div>
                    </div>

                {% endif %}

            </div>
            <div class="right">

                <ul class="menu_list">
                    <li>
                        <a href="/jornal">
                            <span class="txt">Журнал</span>
                            <span class="jornal_cnt"></span>
                        </a>
                        <div class="cover"></div>
                    </li>
                    <li>
                        <a href="/jornal">
                            <span class="txt">Удаленные рецепты</span>
                        </a>
                        <div class="cover"></div>
                    </li>
                </ul>

            </div>

        </div>

    </div>

{% endblock body %}
