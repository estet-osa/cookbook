{% extends 'AppBundle:Main:base.html.twig' %}

{% block javascripts %}
    <script type="text/javascript" async src="{{ asset('js/lib.js?%s') | format(random(998)) }}"></script>
{% endblock %}

{% block body %}

    <div class="all">

        {% include('AppBundle:Templates:header.html.twig') %}

        <div class="main">

            <div class="left">

                <div class="recipe_form">

                    <h2>Добавить новый рецепт</h2>

                    {{ form_start(form) }}

                        <div>
                        {{ form_row(form.title, {
                            'label'     : 'Название блюда',
                            'required'  : true,
                            'attr'      : { 'placeholder' : 'Название блюда', 'class' : 'recipe_inpt' }
                        }) }}
                        </div>
                        <div>
                        {{ form_row(form.description, {
                            'label'     : 'Описание блюда',
                            'required'  : true,
                            'attr'      : { 'placeholder' : 'Подробное описание, рецепт', 'class' : 'recipe_area' }
                        }) }}
                        </div>
                        <div>
                        {{ form_row(form.brochure, {
                            'label'     : 'Добавьте картинку',
                            'required'  : true,
                        }) }}
                        </div>
                        <div>
                        {{ form_row(form.save, {
                            'label'     : 'Сохранить',
                            'attr'      : { 'class' : 'save_btn' }
                        }) }}
                        </div>
                    {{ form_end(form) }}

                </div>

            </div>
            <div class="right">

                <ul class="menu_list">
                    <li>
                        <a href="/jornal">
                            <span class="txt">Журнал</span>
                            <span id="jornalCnt" class="jornal_cnt">12</span>
                        </a>
                        <div class="cover"></div>
                    </li>
                    <li>
                        <a href="/jornal">
                            <span class="txt">Удаленные рецепты</span>
                        </a>
                        <div class="cover"></div>
                    </li>
                </ul>

            </div>

        </div>

    </div>

{% endblock body %}
